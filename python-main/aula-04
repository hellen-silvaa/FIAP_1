par =0
qtd = 0
while qtd <5:
    num = int(input("Digite um número"))
    if num%2 ==0:
        par =+ 1
    qtd += 1
    print(f"Você digitou {par} pares e {5-par} impares")


senha = 123456
tentativas = 0
while senha <5:
    senha = int(input("Digite sua senha:"))
    if senha != 123456:
        senha =+1
    print(type(senha))
else:
    print(f"Senha incorreta, tente novamente")

senha_cadastrada = '1234'
senha = input ('Diga sua senha: ')
while senha != senha_cadastrada:
    print("Você é hacker?")
    senha = input ("Diga sua senha: ")
print("Acesso liberado!")

senha_cadastrada = '1234'
senha = input ('Diga sua senha: ')
tentativa =1
while senha != senha_cadastrada and tentativa < 3:
    print(f"Você é hacker? Só mais {3 - tentativa} tentativas")
    senha = input ("Diga sua senha: ")
    tentativa += 1
if senha == senha_cadastrada:
 print("Acesso liberado!")
else:
 print("Sai hacker!!")

i = 0
soma = 0
while i < 100:
    i+=1
    soma += i
 print(soma)

text = input("Diga sim ou nao: ")

while text != 'sim' and text != 'nao' :
    print("Valido apenas sim ou não")
    text = input("Diga sim ou , SÓ ACEITAMOS SIM OU NAO: ")

print(f"parabens, vc digitou {text}")
